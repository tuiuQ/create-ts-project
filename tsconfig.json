{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./lib/types",
    "sourceMap": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@": ["src/*"]
    },
    "lib": ["ESNext", "DOM"],
    "types": ["node"]
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}
